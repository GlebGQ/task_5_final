<h1><span>Tic Tac Toe</span></h1>
<span id="gameInformation"></span>
<div>
    <div id="register">
        <input type="button" class="btn btn-primary" id="registerName" value="Register" />
    </div>
    <div id="findOpponent">
        <strong>Find someone to play with!</strong>
        <em>You're just a small way from beating your first opponent!</em></br>
        <input type="button" class="btn btn-primary" id="findGame" value="Find Opponent!" />
    </div>
    <div id="waitingForOpponent">We're searching for an opponent, please wait!</div>
    <div id="game">

    </div>
    <div class="clear"><input type="button" class="btn btn-primary" id="findAnotherGame" value="Find a new Opponent!" /></div> 
</div>
<script> var userName = "@User.Identity.Name"; </script>
@section Scripts
{ 
    <script src="~/js/site.js" asp-append-version="true"></script>
}