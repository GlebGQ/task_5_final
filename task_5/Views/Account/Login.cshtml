@model task_5.ViewModels.LoginUserViewModel

<h2>Login</h2>
<form class="mb-5" method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-check form-group">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg">Login</button>
    </div>
</form>
<p>Don't have an account? <a class="" role="button" aria-pressed="true" asp-controller="Account" asp-action="Register">Register</a></p>
